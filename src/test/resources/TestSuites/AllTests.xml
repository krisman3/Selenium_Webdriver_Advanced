<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="AllTests" verbose="1">
    <test name="PositiveTests">
        <parameter name="browser" value="chrome" />
        <parameter name="headless" value="true" />
        <classes>
            <class name="com.herokuapp.theinternet.tests.PositiveTests"/>
        </classes>
    </test>

    <test name="NegativeTests">
        <parameter name="browser" value="edge" />
        <parameter name="headless" value="true" />
        <classes>
            <class name="com.herokuapp.theinternet.tests.NegativeTests"/>
        </classes>
    </test>
    <test name="AddRemoveElements" >
        <classes>
            <class name="com.herokuapp.theinternet.tests.AddRemoveElementsTests"/>
        </classes>
    </test>
    <test name="CheckBoxes">
        <parameter name="browser" value="edge" />
        <parameter name="headless" value="true" />
        <classes>
            <class name="com.herokuapp.theinternet.tests.CheckBoxesTest"/>
        </classes>
    </test>

</suite>
