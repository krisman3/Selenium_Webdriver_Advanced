<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="AllTests" verbose="1">
    <test name="PositiveTests">
        <parameter name="browser" value="chrome" />
        <classes>
            <class name="com.herokuapp.theinternet.PositiveTests"/>
        </classes>
    </test>

    <test name="NegativeTests">
        <parameter name="browser" value="edge" />
        <classes>
            <class name="com.herokuapp.theinternet.NegativeTests"/>
        </classes>
    </test>
    <test name="AddRemoveElements" >
        <classes>
            <class name="com.herokuapp.theinternet.AddRemoveElements"/>
        </classes>
    </test>
    <test name="CheckBoxes">
        <parameter name="browser" value="edge" />
        <classes>
            <class name="com.herokuapp.theinternet.CheckBoxes"/>
        </classes>
    </test>

</suite>
